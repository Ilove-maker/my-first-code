import random

print("--- TUF Gaming: Infinite Number Challenge ---")

while True:  # <--- THE RESTART LOOP (Goes forever)
    secret_number = random.randint(1, 100)
    attempts = 0
    print("\n[NEW ROUND] I am thinking of a number between 1 and 100.")

    while True:  # <--- THE GUESSING LOOP (For the current number)
        try:
            guess = int(input("Take a guess: "))
        except ValueError:
            print("Please type a number!")
            continue

        attempts += 1

        if guess < secret_number:
            print("Too low!")
        elif guess > secret_number:
            print("Too high!")
        else:
            print(f"BINGO! You found it in {attempts} tries!")
            # This 'break' only exits the GUESSING loop
            # It will then jump back to the top of the RESTART loop
            break
